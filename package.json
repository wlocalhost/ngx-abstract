{
  "name": "ngx-abstract",
  "version": "0.0.0-development",
  "scripts": {
    "ng": "ng",
    "prestart": "ng build",
    "start": "ng serve",
    "build": "ng build abstract --prod",
    "watch:lib": "ng build abstract --watch",
    "test": "ng test abstract",
    "lint": "ng lint abstract",
    "e2e": "ng e2e",
    "release": "standard-version",
    "semantic-release": "semantic-release",
    "commit": "git-cz"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md"
          ]
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist/ngx-abstract"
        }
      ]
    ]
  },
  "standard-version": {
    "packageFiles": [
      {
        "filename": "projects/abstract/package.json",
        "type": "json"
      }
    ],
    "bumpFiles": [
      {
        "filename": "projects/abstract/package.json",
        "type": "json"
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.1.2",
    "@angular/common": "~11.1.2",
    "@angular/compiler": "~11.1.2",
    "@angular/core": "~11.1.2",
    "@angular/forms": "~11.1.2",
    "@angular/platform-browser": "~11.1.2",
    "@angular/platform-browser-dynamic": "~11.1.2",
    "@angular/router": "~11.1.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "commitizen": "^4.2.4",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1101.4",
    "@angular/cli": "~11.1.4",
    "@angular/compiler-cli": "~11.1.2",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.2.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.0.0",
    "protractor": "~7.0.0",
    "semantic-release": "^17.4.4",
    "standard-version": "^9.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wanoo21/ngx-abstract.git"
  }
}
